{
  "name": "bbsneo-backend",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "echo Build monorepo",
    "dev": "npm-run-all -p dev:*",
    "dev:gateway": "npm --prefix services/api-gateway run start:dev",
    "dev:identity": "npm --prefix services/identity run start:dev",
    "dev:ott": "npm --prefix services/ott run start:dev",
    "dev:messenger": "npm --prefix services/messenger run start:dev",
    "dev:social": "npm --prefix services/social run start:dev",
    "dev:wallet": "npm --prefix services/wallet run start:dev",
    "dev:revenue-cms": "npm --prefix services/revenue-cms run start:dev",
    "dev:moderation": "npm --prefix services/moderation run start:dev",
    "dev:search-rec": "npm --prefix services/search-rec run start:dev",
    "dev:admin": "npm --prefix services/admin run start:dev",
    "compose:up": "docker compose -f infra/docker-compose.yml up -d",
    "compose:down": "docker compose -f infra/docker-compose.yml down"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "ts-node-dev": "^2.0.0"
  }
}
